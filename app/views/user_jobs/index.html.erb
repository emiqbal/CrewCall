<% @notifications.each do |notification| %>
  <div class="alert alert-warning" role="alert">
    <p><%= render notification %></p>
  </div>
<% end %>

<% @user_jobs.each do |user_job| %>
  <% if user_job.status == "Applied" %>
    <h3>Applied</h3>
      <div class="submissions">
        <%= link_to project_path(user_job.job.project) do%>
        <h5><%= user_job.job.project.title %></h5>
        <% end %>
        <p>Job Title: <%= user_job.job.title %> </p>
        <p>Job Dates: <%= "#{user_job.job.start_date.strftime('%d %b %Y')} to #{user_job.job.end_date.strftime('%d %b %Y')}" %></p>
        <p>Job Status: <%= user_job.status %> </p>
      </div>
  <% elsif user_job.status == "Approved" %>
    <h3>Approved</h3>
      <div class="submissions">
        <%= link_to project_path(user_job.job.project) do%>
        <h5><%= user_job.job.project.title %></h5>
        <% end %>
        <p>Job Title: <%= user_job.job.title %> </p>
        <p>Job Dates: <%= "#{user_job.job.start_date.strftime('%d %b %Y')} to #{user_job.job.end_date.strftime('%d %b %Y')}" %></p>
        <p>Job Status: <%= user_job.status %> </p>
      </div>
    <% elsif user_job.status == "Confirmed" %>
    <h3>Confirmed</h3>
      <div class="submissions">
        <%= link_to project_path(user_job.job.project) do%>
        <h5><%= user_job.job.project.title %></h5>
        <% end %>
        <p>Job Title: <%= user_job.job.title %> </p>
        <p>Job Dates: <%= "#{user_job.job.start_date.strftime('%d %b %Y')} to #{user_job.job.end_date.strftime('%d %b %Y')}" %></p>
        <p>Job Status: <%= user_job.status %> </p>
      </div>
    <% elsif user_job.status == "Rejected" %>
    <h3>Rejected</h3>
      <div class="submissions">
        <%= link_to project_path(user_job.job.project) do%>
        <h5><%= user_job.job.project.title %></h5>
        <% end %>
        <p>Job Title: <%= user_job.job.title %> </p>
        <p>Job Dates: <%= "#{user_job.job.start_date.strftime('%d %b %Y')} to #{user_job.job.end_date.strftime('%d %b %Y')}" %></p>
        <p>Job Status: <%= user_job.status %> </p>
      </div>
  <% end %>
<% end %>

