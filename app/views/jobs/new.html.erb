<h1>Add a new Job to <%=  @project.title %></h1>
  <%= simple_form_for([@project, @job]) do |f| %>
    <div id="form_with_calendar" data-min-date="<%= @min_date %>" data-max-date="<%= @max_date %>">
    <div class="form-inputs type-form-control">
      <%= f.input :title %>
      <p>Description</p>
      <%= f.rich_text_area :rich_description, required: true, label: "Description" %>
      <%= f.input :department, required: true, collection: %w(Camera Lighting Casting Talent AD Production Transport Location) %>
      <%= f.input :salary, required: true, label: "Salary per Day in $" %>
      <%= f.input :start_date, required: true, label: "Start Date", as: :string, type: :text %>
      <%= f.input :end_date, required: true, label: "End Date", as: :string, type: :text %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create a Job for #{@project.title}", class: "btn btn-flat w-100" %>
    </div>
  <% end %>

<div class="pt-2">
<%= link_to "Back", project_path(@project.id), class: 'btn btn-flat'  %>
</div>
