<h1>Add a new Job to <%=  @project.title %></h1>
  <%= simple_form_for([@project, @job]) do |f| %>
    <div id="form_with_calendar" data-min-date="<%= @min_date %>" data-max-date="<%= @max_date %>">
    <div class="form-inputs type-form-control">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :department, collection: %w(Camera Lighting Casting Talent AD Production Transport Location) %>
      <%= f.input :salary, label: "Salary per Day in $" %>
      <%= f.input :start_date, label: "Start Date", as: :string, type: :text %>
      <%= f.input :end_date, label: "End Date", as: :string, type: :text %>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-flat" %>
    </div>
  <% end %>

<div class="pt-2">
<%= link_to "Back", project_path(@project.id), class: 'btn btn-flat'  %>
</div>
