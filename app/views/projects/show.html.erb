
<h2>Project: <%= @project.title %></h2>
<p>by <%= cl_image_tag @project.user.photo.key, class: "avatar"%>
  <%= @project.user.username %></p>
<!-- with mini avatar and can click into producer show pg -->
<div class="rounded border">
  <%= cl_image_tag @project.user.photo.key, class: "photobanner" %>
</div>
<h4 class= "mt-3"><strong>About the Project</strong></h4>
<%= @project.description %>
<h4 class= "mt-3">Project Timeline</h4>
<p><%= @project.start_date.strftime('%d %b %Y') %> to <%= @project.end_date.strftime('%d %b %Y') %></p>

<h3>Project Jobs</h3>
<% if current_user == @project.user %>
  <%= link_to "Add Jobs", new_project_job_path(@project), class: 'btn btn-flat'  %>
<% end %>
  <% if @project.jobs.exists? %>
    <% @project.jobs.each do |job| %>
      <p>Description: <%= job.description %></p>
      <p>Salary:<%= job.salary / 100 %> per Day</p>
      <p>Start Date:<%= job.start_date.strftime('%d %b %Y') %></p>
      <p>End Date:<%= job.end_date.strftime('%d %b %Y') %></p>
    <% end %>
  <% end %>

<%= link_to "Back", :back, class: 'btn btn-flat'  %>

