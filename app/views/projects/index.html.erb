<h2 class="text-center pb-2">CREWCALL</h2>
<% if user_signed_in? %>
<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-flat my-2" %>
<% else %>
<%= link_to "Login", new_user_session_path, class: "btn btn-flat my-2" %>
<% end %>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required px-4" type="text" name="search[query]" id="search_query", placeholder="Search" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>

<div>
  <% @projects.each do |project| %>
    <%= link_to project_path(project) do %>
      <div class="card-product">
        <%= cl_image_tag project.photo.key, gravity: :auto, class: "project-image" %>
        <div class="card-product-infos">
          <h2><%= project.title %></h2>
          <!-- <p><%= project.description %></p> -->
          <p><%= "#{project.start_date.strftime('%d %b %Y')} to #{project.end_date.strftime('%d %b %Y')}" %></p>
              <% if project.user.photo.attached? %>
                <%= cl_image_tag project.user.photo.key, class: "avatar-card" %>
              <% else %>
                <%= image_tag "https://www.flaticon.com/svg/static/icons/svg/599/599305.svg", class: "avatar-card"%>
              <% end %>
          <div class="card-avatar-infos">
            <%= project.user.username %>
          </div>
       </div>
      </div>
    <% end %>
  <% end %>
</div>



